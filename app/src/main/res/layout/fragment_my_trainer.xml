<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/iran_sans_mobile"
            android:text="ارسلان صالحی"
            android:textSize="14sp" />

        <RatingBar
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:numStars="5"
            android:rating="5"
            android:theme="@style/RatingBar" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ronnie_coleman_triceps_extensions" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_voice_24dp"
        android:fontFamily="@font/iran_sans_mobile"
        android:gravity="right"
        android:text="اطلاعیه مربی"
        android:textColor="@color/colorAccent"
        app:backgroundTint="@color/yellow" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"

        android:fontFamily="@font/iran_sans_mobile"
        android:text="با سلام به همه دوستان من به دلیل شرکت در مسابقات بین المللی فعلا در باشگاه حضور نخواهم داشت لطفا از طریق بادیفا با من در تماس باشید."
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/iran_sans_mobile"
        android:text="مقام ها" />

    <android.support.v7.widget.GridLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:columnCount="3"
        app:rowCount="1"
        app:useDefaultMargins="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/gray_rect_back"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_medal"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="اول کشوری"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="سال 94"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/gray_rect_back"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_medal"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="اول کشوری"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="سال 94"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/gray_rect_back"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_medal"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="اول کشوری"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="سال 94"
                android:textSize="10sp" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>


</LinearLayout>
